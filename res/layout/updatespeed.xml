<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@drawable/bak">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Select County"
            android:id="@+id/selectcounty"/>
    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/county" android:spinnerMode="dropdown" android:enabled="false"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceMedium" android:text="Select RoadType"
              android:id="@+id/selectroad"/>
    <Spinner android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/road"
             android:spinnerMode="dropdown" android:enabled="false"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceMedium" android:text="List of Roads"
              android:id="@+id/selectlist"/>
    <Spinner android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/list"
             android:spinnerMode="dropdown" android:enabled="false"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceMedium" android:text="Select Speed"
              android:id="@+id/selectspeed"/>
    <Spinner android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/speed"
             android:spinnerMode="dropdown" android:enabled="false"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="BroadCast"
            android:id="@+id/button"/>

</LinearLayout>